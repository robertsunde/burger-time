<div class="row">
  <div class="col-12 hamburger"><h1>It's Burger Time!</h1>
<i class="fas fa-hamburger fa-10x"></i>
</div>
</div>

<div class = "row align-items-start">

<div class="col-6 left">
<h2 class = "left">Saving for Later!</h2>

<ul class="list">
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-6 right">
<h2 class="right">The Eaten!</h2>

<ul class ="list">
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>
</div>

<div class="row center">
<div class="col-12">
<h2>Name Your Creation:</h2>
<form id="create-form">

  <div class="form-group">
    <label for="populate"></label>
    <input type="text" id="populate" name="name">
  </div>

  <div class="form-group">
    <label class="container">
    <input type="radio" checked="checked" name="radio" value="0" id="not devoured"> Save for Later! <br>
    <span class="checkmark"></span>
    </label>
    <label class="container">
    <input type="radio" name="radio" value="1" id="devoured"> Eat Immediately! <br>
    <span class="checkmark"></span>
    </label>
  </div>


  <button type="submit" class="btn btn-light">Create!</button>
</form>
</div>
</div>

</div>